<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bt_screen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Navigator"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/bt_screen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Navigator (with limits)"
        android:layout_gravity="center" />


    <Button
        android:id="@+id/bt_screen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Navigator (with style)"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/bt_screen4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Navigator (with animation)"
        android:layout_gravity="center" />
</LinearLayout>
